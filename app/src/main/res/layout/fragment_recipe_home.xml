<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeHome">

    <Button
        android:id="@+id/btnRecipeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Recipe Listings"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add Recipe"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btnRecipeList"
        app:layout_constraintTop_toBottomOf="@+id/btnRecipeList" />

    <Button
        android:id="@+id/btnEditRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Edit Recipe Listing"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btnAddRecipe"
        app:layout_constraintTop_toBottomOf="@+id/btnAddRecipe" />

</androidx.constraintlayout.widget.ConstraintLayout>